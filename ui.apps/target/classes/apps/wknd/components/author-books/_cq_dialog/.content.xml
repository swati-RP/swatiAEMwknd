<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Author Books"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="components.author-books.editor">
    <content
        granite:class="cmp-author_editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <multifieldwithmap
                jcr:primaryType="nt:unstructured"
                jcr:title="Multifield With Map"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <authorname
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Author Name"
                        name="./authorname"/>
                    <well
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/well"
                        fieldLabel="Book Details">
                        <items jcr:primaryType="nt:unstructured">
                            <books
                                granite:class="geeks-multifield"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}false"
                                fieldLabel="Autor's Books"
                                validation="geeks-multifield">
                                <field
                                    granite:class=""
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    name="./books"/>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    max-items="{Long}5"
                                    min-items="{Long}3"/>
                            </books>
                            <bookdetailswithmap
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldDescription="Books Details"
                                fieldLabel="Book Details"
                                required="{Boolean}false">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    emptyText="Books Details"
                                    name="./bookdetailswithmap">
                                    <items jcr:primaryType="nt:unstructured">
                                        <book
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Book Name"
                                            fieldLabel="Book Name"
                                            name="./book"/>
                                        <subject
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Book Subject"
                                            fieldLabel="Book Subject"
                                            name="./subject"/>
                                        <published
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Publish Year"
                                            fieldLabel="Publish Year"
                                            name="./published"/>
                                    </items>
                                </field>
                            </bookdetailswithmap>
                        </items>
                    </well>
                </items>
            </multifieldwithmap>
        </items>
    </content>
</jcr:root>
