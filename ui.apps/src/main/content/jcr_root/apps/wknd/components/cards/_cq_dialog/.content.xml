<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Cards"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_5_docs_component_en#Title - HTL">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                   <card1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Card1"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                    <image1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="enter image path"
                        fieldLabel="Image1"
                        name="./image1"
                        rootPath="/content/dam"/>
                    <image2
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="enter image path"
                        fieldLabel="Image2"
                        name="./image2"
                        rootPath="/content/dam"/>
                    <image3
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldDescription="enter image path"
                        fieldLabel="Image3"
                        name="./image3"
                        rootPath="/content/dam"/>
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        emptyText="Enter the Title."
                        fieldDescription="Title to display."
                        fieldLabel="Title"
                        name="./title"
                        required="{Boolean}true"/>
                    <text
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                        emptyText="Enter the Text."
                        fieldDescription="Title to display."
                        fieldLabel="Text"
                        name="./text"
                        required="{Boolean}true"/>
                </items>
            </card1>
                   <card2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Card2"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title1
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                composite="{Boolean}true"
                                fieldLabel="Main Title"
                                name="./title1"/>
                            
                              <history
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                composite="{Boolean}true"
                                fieldLabel="Main Title"
                                name="./history"/>

                            <image4
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                    fieldDescription="enter image path"
                                    fieldLabel="Image"
                                    name="./image4"
                                    rootPath="/content/dam"/>
                            </items>
                        </card2>
               </items>
            </tabs>
        </items>
      
    </content>
</jcr:root>
